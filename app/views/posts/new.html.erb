<div class="booktop">
<h1>スレッド 新規投稿</h1>
<div class="bookpost-container">
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body, :size => 140 %><br>

    <%= f.label :genre %>
    <%= f.text_field :genre, :size => 140 %><br>

  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  
  <%= f.submit "投稿する" %>
<% end %>
<%= link_to "スレッド一覧に戻る", posts_path %>
</div>