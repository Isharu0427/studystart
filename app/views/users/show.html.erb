<div class="mypage1">
  <h1>マイページ</h1>
</div>

<%= button_to 'ログアウト', destroy_user_session_path, method: :delete, class:"login" %>
<div class="box20">
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>
</div>

<div class="box22">
<h2>ユーザーの投稿した書評一覧</h2>
<% @user.books.each do |t| %>
  <%= t.title %>
  <%= link_to "詳細へ", book_path(t.id) %><br>
<% end %>
</div>

<div class="box22">
<h2>ユーザーがいいねした書評一覧</h2>
<% @user.liked_books.each do |t| %>
  <%= link_to t.user.name, user_path(t.user.id) %>
  <%= t.title %>
  <%= link_to "詳細へ", book_path(t.id) %><br>
<% end %>
</div>

<div class="box22">
<h2>ユーザーの投稿したスレッド一覧</h2>
<% @user.posts.each do |t| %>
  <%= t.body %>
  <%= link_to "詳細へ", post_path(t.id) %><br>
<% end %>
</div>

<div class="box22">
<h2>ユーザーがいいねしたスレッド一覧</h2>
<% @user.post_liked_posts.each do |t| %>
  <%= link_to t.user.name, user_path(t.user.id) %>
  <%= t.body %>
  <%= link_to "詳細へ", post_path(t.id) %><br>
<% end %>
</div>
